<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--colorPrimary 应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/colorAccent</item>
        <!--.colorPrimaryDark 应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--16.textColorPrimary 应用的主要文字颜色，actionBar的标题文字默认使用该颜色-->
        <item name="android:textColorPrimary">@color/textGlobal</item>
        <!--系统状态栏颜色-->
        <item name="android:statusBarColor">@color/colorAccent</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <!--4.windowBackground 窗口背景颜色-->
        <!--colorForeground 应用的前景色，ListView的分割线，switch滑动区默认使用该颜色-->
        <!--colorBackground 应用的背景色，popMenu的背景默认使用该颜色-->
        <!--8.colorAccent CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色-->


    </style>

    <style name="but_orange_bk_c80_hw_wm" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/C80</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="book_list_item_back" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_red</item>
        <!--<item name="android:background">@color/C80</item>-->
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="CollapsingTheme" parent="AppTheme">
    </style>
    <!-- Base application theme. -->
    <style name="CustomAppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@color/statusColor</item>
        <!--colorPrimary 对应ToolBar的颜色-->
        <!--<item name="colorPrimary">@color/toolBarColor</item>-->
        <!--colorAccent 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色。-->
        <!--<item name="colorAccent">@color/editColor</item>-->
        <!--窗口的颜色-->
        <item name="android:windowBackground">@color/widowColor</item>

    </style>


    <style name="singleText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <!--textView 单行 多余的结尾省略号-->

        <!--     android:ellipsize = "end"　　 省略号在结尾

        android:ellipsize = "start" 　　省略号在开头

        android:ellipsize = "middle" 省略号在中间

        android:ellipsize = "marquee" 跑马灯
-->

    </style>
    <!--Status bar color-->
    <color name="statusColor">#3C3F41</color>
    <!-- toolBar color -->
    <color name="toolBarColor">#7B655F</color>
    <!--EditText,RadioButton,CheckBox color-->
    <color name="editColor">#FD87A9</color>
    <!--Window color-->
    <color name="widowColor">#ffffff</color>


    <color name="textGlobal">#595B5D</color>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="VerifyCode">
        <attr name="codeTextSize" format="dimension" />
        <attr name="codeBackground" format="color"/>
        <attr name="codeLength" format="integer"/>
        <attr name="isContainChar" format="boolean"/>
        <attr name="pointNum" format="integer"/>
        <attr name="linNum" format="integer"/>
    </declare-styleable>

</resources>
