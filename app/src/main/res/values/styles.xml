<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="but_orange_bk_c80_hw_wm" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/C80</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="book_list_item_back" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_red</item>
        <!--<item name="android:background">@color/C80</item>-->
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left</item>
    </style>



    <!-- Base application theme. -->
    <style name="CustomAppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@color/statusColor</item>
        <!--colorPrimary 对应ToolBar的颜色-->
        <item name="colorPrimary">@color/toolBarColor</item>
        <!--colorAccent 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色。-->
        <item name="colorAccent">@color/editColor</item>
        <!--窗口的颜色-->
        <item name="android:windowBackground">@color/widowColor</item>

    </style>

    <!--Status bar color-->
    <color name="statusColor">#3C3F41</color>
    <!-- toolBar color -->
    <color name="toolBarColor">#7B655F</color>
    <!--EditText,RadioButton,CheckBox color-->
    <color name="editColor">#FD87A9</color>
    <!--Window color-->
    <color name="widowColor">#ffffff</color>

</resources>
