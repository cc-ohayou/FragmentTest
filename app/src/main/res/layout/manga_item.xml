<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manga_item"
    android:layout_margin="5dp"
    android:alpha="0.3"
    android:background="@color/mangaItemBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:background="@color/mangaItemBack"-->

    <!--alpha  android:alpha的值为0~1之间的数。数字越大，越不透明。1表示完全不透明，0表示完全透明-->
    <!--text.getBackground().mutate().setAlpha(12); 代码中设置透明度
     0-255 数字越大，越不透明 mutate是为了不共享 防止影响其他控件-->
    <!--android:background="@drawable/b3_christmas"-->
    <!--android:background="@drawable/bg01"-->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <!--封面-->
        <ImageView
            android:id="@+id/manga_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_gravity="right">
        <!--名称-->
        <TextView
            android:id="@+id/manga_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            />
        <!--第几话-->
        <TextView
            android:id="@+id/manga_episode"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/manga_title"
            />^^
        <!-- 区域-->
        <!--android:layout_alignParentRight="true"-->

        <TextView
            android:id="@+id/manga_area"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_below="@+id/manga_episode"
            />
        <TextView
            android:id="@+id/manga_new_desc"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/manga_area"

            />
    </RelativeLayout>


</LinearLayout>

