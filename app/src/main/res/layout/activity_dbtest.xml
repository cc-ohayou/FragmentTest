<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.DBTestActivity">


    <Button
        android:id="@+id/create_db_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create db"
        />

    <Button
        android:id="@+id/add_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="addData"
        />

    <Button
        android:id="@+id/update_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UpdateData"
        />
    <Button
        android:id="@+id/del_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DelData"
        />

    <Button
        android:id="@+id/query_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        />
</LinearLayout>